<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".ui.client.ClientFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        android:paddingTop="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNameStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Usuario"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvNameDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedro Alfonso"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvPhoneStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvPhoneDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="326 3340058"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Correo y Dirección en horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvEmailStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo Electrónico"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvEmailDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="san@corre.com"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvAddressStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvAddressDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle 12 A 56 B 47"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvCityStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvCityDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neiva"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvDepartmentStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departamento:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvDepartmentDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huila"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Título Recomendaciones -->
        <TextView
            android:id="@+id/tvRecommendationsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendaciones desde IA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"/>

        <!-- Texto fijo de recomendación -->
        <TextView
            android:id="@+id/tvRecommendationContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graba tu primer video para que la IA te recomeinde la ubicación de tus productos"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>

        <!-- Botón para grabar video -->
        <Button
            android:id="@+id/btnRecordVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Grabar Video"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
